<div data-role="choice-item" class="ui-state-default">
    <div class="pull-left"><a href="#"><i class="fa fa-ellipsis-v" aria-hidden="true"></i></a></div>
    <div class="form-group form-inline">
        <input type="hidden" data-name="uniqueid" value="{{ id }}" />
        <input type="checkbox" title="'Check' to mark this choice as correct" name="question{{ unique_id }}" />
        <textarea data-name="choice" placeholder="Type your choice here" rows="1" class="form-control">{{ title }}</textarea> {{#if enable_scoring}}
        <label>Score</label>
        <input type="text" data-name="score" placeholder="Enter the score" value="{{ score }}" class="form-control" /> {{/if }}
        <div class="pull-right"><a data-role="delete-choice"><i class="fa fa-trash" aria-hidden="true"></i></a></div>
    </div>
</div>