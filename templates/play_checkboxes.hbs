<div data-name="play-question" data-qid="{{ id }}">
    <div>
        <p>{{{title}}}</p>
    </div>
    <div data-choice-type="{{ type }}"> {{#each choice}}
        <div class="checkbox" data-choice-item data-value="{{ id }}">
            <label>
                <input type="checkbox" class="clickable" {{#if selected }} checked="checked" {{/if}} value="{{ id }}"> {{ ./title }} </label>
        </div> {{/each }} </div>
</div>